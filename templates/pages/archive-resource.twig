{% extends "index.twig" %}

{% block main %}

{% if title %}<h1 class="title">{{title}}</h1>{% endif %}

<div class="uk-grid ">

  <div class="uk-width-expand">
    <div class="uk-grid uk-grid-small" uk-height-match="target: .uk-card"  id="results" uk-grid>
    {% for post in posts  %}

      <div class="uk-width-1-2@m match" >
            {% include 'teasers/tease-'~post.post_type~'.twig' %}
      </div>

    {% endfor %}
    </div>
  </div>

  {% if sidebar %}
  <div class="uk-width-1-3@s uk-flex-first uk-flex-last@s"">
    {{ include('filter-bar/filter-bar.twig', {form: sidebar}, with_context = false) }}
  </div>
  {% endif %}

</div>
{% include 'pagination/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}  

{% endblock %}