{% extends "/blocks/block.twig" %}

{% block block %}
<div class="uk-container uk-container-center">
	<div class="cs1-block-2-3-text-box-1-3-blue-quote-box uk-padding-small uk-padding-remove-horizontal uk-padding-remove-bottom" style="background-color:{{background_colour}}">

		<div class="uk-grid">

			<div class="uk-width-2-3@m">
				<div class="cs1-block-2-3-text-box-1-3-blue-quote-box uk-padding  uk-dark  uk-text-justify {{ background_colour == '#fff' ? 'uk-dark' : 'uk-light' }} ">
					<span class="block-2-3-text-box-1-3-blue-quote-box-body">{{body_text}}</span>
				</div>       
			</div>

			<div class="uk-width-1-3@m">
					<div class="block-content  uk-padding uk-padding-remove-left">
				<div class="cs1-block-2-3-text-box-1-3-blue-quote-box-xtra-wrapper uk-light uk-padding">
					<h4 class="uk-quote block-content block-2-3-text-box-1-3-blue-quote-box-xtra">{{extra_text}}</h4>
				</div>       
			</div>
			</div>

		</div><!-- /grid -->
	</div>
</div>
{% endblock %}