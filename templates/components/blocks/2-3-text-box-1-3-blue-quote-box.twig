{% extends "/blocks/block.twig" %}

{% block block %}
<div class="block-2-3-text-box-1-3-blue-quote-box uk-padding uk-padding-remove-horizontal uk-padding-remove-bottom" style="background-color:{{background_colour}}">
	<div class="uk-container uk-container-center">
		<div class="uk-grid">

			<div class="uk-width-2-3@m uk-padding-remove-horizontal">
				<div class="block-2-3-text-box-1-3-blue-quote-box-text uk-text-lead uk-padding uk-padding-remove-left {{ background_colour == '#fff' ? 'uk-dark' : 'uk-light' }} uk-align-center uk-margin-remove-bottom">
					<span class="block-2-3-text-box-1-3-blue-quote-box-body">{{body_text}}</span>
				</div>       
			</div>

			<div class="uk-width-1-3@m uk-padding-remove-horizontal">
				<div class="block-content block-2-3-text-box-1-3-blue-quote-box-xtra-wrapper uk-light uk-padding">
					<span class="block-content block-2-3-text-box-1-3-blue-quote-box-xtra">{{extra_text}}</span>
				</div>       
			</div>

		</div><!-- /grid -->
	</div>
</div>
{% endblock %}