<div class="uk-position-relative uk-dark">
  <div class="uk-slideshow" data-uk-slideshow="finite: false;">
  	
    <ul class="uk-slideshow-items">
      {% for item in post.meta('slide_show') %}
      <li class="uk-align-center"><img class="uk-align-center" src="{{ Image(item.slide).src }}" /></li>
      {% endfor %}
    </ul>

<a class="uk-position-center-left uk-position-small uk-hidden-hover uk-slidenav-large uk-slidenav-contrast" href="#" uk-slidenav-previous uk-slideshow-item="previous"></a>
<a class="uk-position-center-right uk-position-small uk-hidden-hover uk-slidenav-large uk-slidenav-contrast" href="#" uk-slidenav-next uk-slideshow-item="next"></a>
  </div>
</div>