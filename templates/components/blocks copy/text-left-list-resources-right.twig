<div class="block block-text-left-list-resources-right uk-padding uk-padding-remove-horizontal" style="background-color:{{background_colour}}">
			<div class="uk-container uk-container-center">
				<div class="uk-grid">

					<div class="uk-width-2-3@m">
            <div class="block-text-left-list-resources-right-text {{ background_colour == '#fff' ? 'uk-dark' : 'uk-light' }}">
              <h3 class="block-headline">{{headline}}!</h3>
              <span class="block-text-left-list-resources-right-body">{{body_text}}</span>
            </div>       
					</div>
          
					<div class="uk-width-1-3@m">
            <div class="block-content block-text-left-list-resources-right-resources">
              <ul>
            	{% for resource in resource_list %}
                <li class="block-text-left-list-resources-right-resources-list-item">
                  <a class="{{ background_colour == '#fff' ? 'uk-dark' : 'uk-light' }}" href="{{resource.resource_url}}">{{ resource.resource_label }}</a>
                </li>
              {% endfor %}
              </ul>
            </div>       
					</div>

				</div>
			</div>
</div>

