<div class="block">
<div class="block block-1-2-text-box-2-2-image-box" style="background-color:{{background_colour}}">

    <div class="uk-grid">
      
      <div class="uk-width-1-2@m">
        <div class="block-1-2-text-box-2-2-image-box-content uk-padding-large {{ background_colour == '#fff' ? 'uk-dark' : 'uk-light' }}">
          <h3>{{headline}}</h3>
          <span class="block-1-2-text-box-2-2-image-box-body">{{body_text}}</span>
        </div>       
      </div> 

      <div class="uk-width-1-2@m block-1-2-text-box-2-2-image-box-image" style="background-image: url({{image}})"></div>

    </div><!-- /grid -->

</div><!-- /block -->